<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./components/head.ejs') -%>
  </head>
  <body>
    <header>
      <h1>Reisplanner werk</h1>
    </header>
    <main>
      <form action="/" method="POST">
        <div class="form">
          <h2>Vanaf welk station?</h2>
          <section>
            <select name="departure" id="departure">
              <option value="Amsterdam Centraal">Amsterdam Centraal</option>
              <option value="Eindhoven Centraal">Eindhoven Centraal</option>
            </select>
          </section>
          <h2>Op welke dag?</h2>
          <section>
            <select name="days" id="days">
              <% data.forEach(function(item){%>
              <option value="<%-item-%>"><%-item-%></option>
              <%-item-%> <%}) %>
            </select>
          </section>
          <h2>Om hoelaat?</h2>
          <section>
            <input type="time" name="time" id="time" value="12:00" step="900" />
          </section>
          <button id="save" onclick="saveValues()">Opslaan</button>
        </div>
      </form>
    </main>
    <script src="/scripts/script.js"></script>
  </body>
</html>
