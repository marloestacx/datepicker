<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./components/head.ejs') -%>
  </head>
  <body>
    <header>
      <h1>Aanbevolen boeken</h1>
      <h2>Top 15 boeken van de New York Times bestsellerlijst</h2>
    </header>
    <main>
      <section class="books">
        <% books.results.books.forEach(function(book){%>
        <a href="<%-book.amazon_product_url-%>">
          <img src="<%-book.book_image-%>" />
        </a>
        <%}) %>
      </section>
    </main>
    <script src="/scripts/script.js"></script>
  </body>
</html>
