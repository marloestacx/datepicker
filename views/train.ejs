<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./components/head.ejs') -%>
  </head>
  <body>
    <header>
      <h1>Reisplanner dagje weg</h1>
    </header>
    <main>
      <form action="/" method="POST">
        <div class="form">
          <h2>Vanaf welk station?</h2>
          <section>
            <select name="departure" id="departure">
              <option value="Eindhoven Centraal">
                Station Eindhoven Centraal
              </option>
              <option value="Amsterdam Centraal">
                Station Amsterdam Centraal
              </option>
              <option value="Utrecht Centraal">Station Utrecht Centraal</option>
              <option value="Rotterdam Centraal">
                Station Rotterdam Centraal
              </option>
              <option value="Den Haag Centraal">
                Station Den Haag Centraal
              </option>
              <option value="Leiden Centraal">Station Leiden Centraal</option>
              <option value="Arnhem">Station Arnhem</option>
              <option value="Amsterdam Sloterdijk">
                Station Amsterdam Sloterdijk
              </option>
              <option value="Den Haag HS">Station Den Haag HS</option>
              <option value="Amersfoort">Station Amersfoort</option>
              <option value="Amsterdam Zuid">Station Amsterdam Zuid</option>
              <option value="‘s Hertogenbosch">Station ‘s Hertogenbosch</option>
              <option value="Amsterdam Amstel">Station Amsterdam Amstel</option>
              <option value="Amsterdam Bijlmer ArenA">
                Station Amsterdam Bijlmer ArenA
              </option>
              <option value="Groningen">Station Groningen</option>
              <option value="Nijmegen">Station Nijmegen</option>
              <option value="Zwolle">Station Zwolle</option>
              <option value="Breda">Station Breda</option>
              <option value="Haarlem">Station Haarlem</option>
              <option value="Tilburg">Station Tilburg</option>
            </select>
          </section>
          <h2>Naar welk station?</h2>
          <section>
            <select name="arrive" id="arrive">
              <option value="Eindhoven Centraal">
                Station Eindhoven Centraal
              </option>
              <option value="Amsterdam Centraal">
                Station Amsterdam Centraal
              </option>
              <option value="Utrecht Centraal">Station Utrecht Centraal</option>
              <option value="Rotterdam Centraal">
                Station Rotterdam Centraal
              </option>
              <option value="Den Haag Centraal">
                Station Den Haag Centraal
              </option>
              <option value="Leiden Centraal">Station Leiden Centraal</option>
              <option value="Arnhem">Station Arnhem</option>
              <option value="Amsterdam Sloterdijk">
                Station Amsterdam Sloterdijk
              </option>
              <option value="Den Haag HS">Station Den Haag HS</option>
              <option value="Amersfoort">Station Amersfoort</option>
              <option value="Amsterdam Zuid">Station Amsterdam Zuid</option>
              <option value="‘s Hertogenbosch">Station ‘s Hertogenbosch</option>
              <option value="Amsterdam Amstel">Station Amsterdam Amstel</option>
              <option value="Amsterdam Bijlmer ArenA">
                Station Amsterdam Bijlmer ArenA
              </option>
              <option value="Groningen">Station Groningen</option>
              <option value="Nijmegen">Station Nijmegen</option>
              <option value="Zwolle">Station Zwolle</option>
              <option value="Breda">Station Breda</option>
              <option value="Haarlem">Station Haarlem</option>
              <option value="Tilburg">Station Tilburg</option>
            </select>
          </section>
          <h2>Op welke dag?</h2>
          <section>
            <select name="days" id="days">
              <% data.forEach(function(item){%>
              <option value="<%-item-%>"><%-item-%></option>
              <%-item-%> <%}) %>
            </select>
          </section>
          <h2>Om hoelaat?</h2>
          <section>
            <input type="time" name="time" id="time" value="12:00" step="900" />
          </section>
          <button id="save" onclick="saveValues()">Opslaan</button>
        </div>
      </form>
    </main>
    <script src="/scripts/script.js"></script>
  </body>
</html>
